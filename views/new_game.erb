
<% unless @name1 %>
  <p>Enter your names, player 1 and player 2:</p>
  <form action="/new_game" method="post" >
    <input type="text" name ="name1">
    <input type="text" name ="name2">
    <input type="submit" value="submit">
  </form>
<% else %>
    <h4>Board for <%= @name1 %></h4>
    <%= @html_board_p1 %>
    <form action="/place_ships" method="post">
      <input type="text" name ="[place_ship]ship_size" placeholder="Ship size">
      <input type="text" name ="[place_ship]coord" placeholder="Coordinae">
      <input type="submit" value="Place">
    </form>

    <h4>Board for <%= @name2 %></h4>
    <%= @html_board_p2 %>
<% end %>

